	import org.igazine.nativeprocess.encoder.outputs.FOutput;
	
	public class DHLS extends Destination {
		
		public function DHLS( path:String ) {
			
			super();
			this.format = FOutput.FORMAT_HLS;
			this.target = path;
			this.options = { hls_flags:"delete_segments", hls_time:2, hls_list_size:6, hls_wrap:10 };
			
		}
		
	}

