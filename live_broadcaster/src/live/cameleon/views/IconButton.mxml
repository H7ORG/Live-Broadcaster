<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
	useHandCursor="true"
	buttonMode="true"
	width="50" height="50"
	backgroundAlpha="0"
	borderVisible="false"
	>
	
	<fx:Declarations>
		<fx:Object id="icon" />
	</fx:Declarations>
	
	<s:BitmapImage source="{ icon }" smooth="true" scaleX=".5" scaleY=".5" verticalCenter="0" horizontalCenter="0" />
	
</s:BorderContainer>